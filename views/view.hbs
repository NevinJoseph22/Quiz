<div class="container">
  <div class="row">
        {{#each collection}}
      <div class="col-md-4">
        <div class="card">
      <div class="card-body">
        <h5 class="card-title"><label>Question:</label>{{this.question}}</h5>
        <h5 class="card-title"><label>Option1:</label>{{this.option1}}</h5>
        <h5 class="card-title"><label>Option2:</label>{{this.option2}}</h5>
        <h5 class="card-title"><label>Option3:</label>{{this.option3}}</h5>
        <h5 class="card-title"><label>Option4:</label>{{this.option4}}</h5>
        <h5 class="card-title"><label>Answer:</label>{{this.answer}}</h5>
        <a href="/admin/edit/{{ this._id }}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete/{{ this._id }}" class="btn btn-danger">Delete</a>
      </div>
    </div>
      </div>
    {{/each}}
  </div>
</div>

