<div class="container">
    <div class="card">
        <form action="/admin/edit/{{collection._id}}" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <label for="question">Question</label>
                <input type="question" class="form-control" id="exampleInputquestion" value="{{collection.question}}" name="question">
            </div>
            <div class="form-group">
                <label for="exampleInputoption1">Option1</label>
                <input type="option1" class="form-control" id="exampleInputoption1" value="{{collection.option1}}" name="option1">
            </div>
            <div class="form-group">
                <label for="exampleInputoption2">Option2</label>
                <input type="option2" class="form-control" id="exampleInputoption2" value="{{collection.option2}}" name="option2">
            </div>
            <div class="form-group">
                <label for="exampleInputoption3">Option3</label>
                <input type="option3" class="form-control" id="exampleInputoption3" value="{{collection.option3}}" name="option3">
            </div>
            <div class="form-group">
                <label for="exampleInputoption4">Option4</label>
                <input type="option4" class="form-control" id="exampleInputoption4" value="{{collection.option4}}"  name="option4">
            </div>
             <div class="form-group">
                <label for="exampleAnswer">Answer</label>
                <input type="answer" class="form-control" id="exampleInputanswer" value="{{collection.answer}}" name="answer">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>